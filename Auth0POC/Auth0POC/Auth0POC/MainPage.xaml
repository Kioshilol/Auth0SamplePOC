<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             BackgroundColor="Pink"
             x:Class="Auth0POC.MainPage">
    <StackLayout  Spacing="16" VerticalOptions="Center" Padding="20,0">
        <Button 
            CornerRadius="8"
            TextColor="White"
            BackgroundColor="Purple"
            Text="Continue with Facebook"
            Clicked="OnContinueWithFacebookClicked" 
            BorderColor="LightPink" />
        <Button
            CornerRadius="8"
            TextColor="Black"
            Text="Continue with Google" 
            Clicked="OnContinueGoogleClicked"
            BorderColor="White" />
        <Button
            CornerRadius="8"
            TextColor="White"
            BackgroundColor="Black"
            x:Name="AppleButton"
            Text="Continue with Apple"
            Clicked="OnContinueWithAppleClicked"
            BorderColor="LightPink" />
        <Button
            BackgroundColor="Transparent"
            Text="Log out"
            FontAttributes="Bold"
            Clicked="OnLogoutClicked" />
    </StackLayout>
</ContentPage>
